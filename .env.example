# === Настройки Directus (Важно для стабильности токенов) ===
SECRET=your_directus_secret
KEY=your_directus_key
PUBLIC_URL=https://admin.your-domain.com
DIRECTUS_URL=https://admin.your-domain.com
DIRECTUS_TOKEN=your_static_token
ADMIN_EMAIL=admin@your-domain.com
ADMIN_PASSWORD=your_admin_password
DIRECTUS_SECRET=your_directus_secret_redundant
DIRECTUS_KEY=your_directus_key_redundant
NODE_ENV=production

# === Настройки ВСТРОЕННОГО AI Chat ===
AI_ENABLED=true
MCP_ENABLED=true
AI_ANTHROPIC_API_KEY=sk-your_anthropic_key
AI_ANTHROPIC_API_BASE=https://api.proxyapi.ru/anthropic/v1

# === Конфигурация ИИ (ProxyAPI) ===
OPENAI_API_KEY=sk-your_openai_key
OPENAI_BASE_URL=https://api.proxyapi.ru/openai/v1
OPENAI_MODEL_CHAT=gpt-4o-mini
OPENAI_MODEL_EMBEDDING=text-embedding-3-small
# Настройки для MCP модуля в Directus
DIRECTUS_MCP_LLM_PROVIDER=openai
DIRECTUS_MCP_OPENAI_API_KEY=sk-your_openai_key
DIRECTUS_MCP_OPENAI_API_BASE=https://api.proxyapi.ru/openai/v1
DIRECTUS_MCP_OPENAI_MODEL=gpt-4o-mini

# === База данных и Редис (Внутренняя сеть Dokploy) ===
DATABASE_URL=postgresql://user:password@db:5432/dbname
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=digital_ecosystem
REDIS_URL=redis://redis:6379/0

# === Бот и Бэкенд (Интеграция) ===
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_ADMIN_CHAT_ID=your_id
MANAGER_PASSWORD=your_password
BACKEND_URL=http://backend:8000
BACKEND_CORS_ORIGINS=["http://your-ip", "https://your-domain.com"]
NEXT_PUBLIC_API_URL=/api
WEB_APP_URL=https://your-domain.com
NEXT_PUBLIC_YANDEX_MAPS_API_KEY=your_yandex_key

# === AmoCRM ===
AMOCRM_SUBDOMAIN=your_subdomain
AMOCRM_ACCESS_TOKEN=
AMOCRM_PIPELINE_ID=
AMOCRM_RESPONSIBLE_USER_ID=
AMOCRM_FIELD_SERIAL_NUMBER=
AMOCRM_FIELD_MACHINE_TYPE=
AMOCRM_FIELD_TELEGRAM_ID=
